<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".casio.golf.activity.PlayOneVideoActivity">


    <RelativeLayout
        android:id="@+id/titleRelativeLayout"
         style="@style/title_style"
        android:paddingLeft="58px"
        android:paddingRight="58px"
        android:background="@color/title_bg"
        >

        <RelativeLayout
            android:id="@+id/backRelativeLayout"
            android:layout_width="200px"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backImageView"
                android:layout_width="39px"
                android:layout_height="57px"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_gr" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/play_title"
            android:textSize="50px"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/operateRelativeLayout"
            android:layout_alignParentRight="true"
            android:layout_width="60px"
            android:gravity="right"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/operateImageView"
                android:layout_width="15px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_overflow_gr" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/editImageView"
            android:layout_width="57px"
            android:layout_height="57px"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:layout_toLeftOf="@id/operateRelativeLayout"
            android:src="@drawable/ic_pen_gr" />

    </RelativeLayout>





    <include
        android:id="@+id/mediaController"
        layout="@layout/view_media_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    </include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleRelativeLayout"
        android:layout_above="@id/mediaController">
        <LinearLayout
            android:id="@+id/SinglePlayerContainer"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/playImageView"
            android:layout_centerInParent="true"
            android:layout_width="186px"
            android:layout_height="185px"
            android:src="@drawable/ic_play"/>
    </RelativeLayout>


</RelativeLayout>
