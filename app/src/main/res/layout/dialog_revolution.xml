<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="55px"
        android:paddingTop="70px"
        android:paddingBottom="70px">

        <TextView
            android:id="@+id/revolution_TextView_90"
            style="@style/revolution_TextView"
            android:text="90度回転"
             />

        <TextView
            android:id="@+id/revolution_TextView_180"
            style="@style/revolution_TextView"
            android:text="180度回転"
             />

        <TextView
            android:id="@+id/revolution_TextView_270"
            style="@style/revolution_TextView"
            android:text="270度回転"
          />
    </LinearLayout>
</RelativeLayout>
