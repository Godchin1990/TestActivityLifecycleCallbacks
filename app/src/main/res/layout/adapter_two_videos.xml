<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_item_height"
    android:background="@color/white"
    android:gravity="center_horizontal"
   >


    <LinearLayout
        android:padding="15px"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listview_item_height"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--  android:background="#ffffff"-->
        <LinearLayout
            android:id="@+id/dateLinearLayout"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="@dimen/listview_item_height"
            android:background="#ffffff"
            android:orientation="vertical"
            android:gravity="center_vertical"
           >

            <TextView
                android:id="@+id/timeTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2015/10"
                android:textColor="#949494"
                android:textSize="50px" />

            <TextView
                android:id="@+id/timeTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20px"
                android:gravity="center"
                android:text="22"
                android:textColor="#000000"
                android:textSize="135px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeTextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20px"
                android:gravity="center"
                android:text="THU"
                android:textColor="#949494"
                android:textSize="50px" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/imagesRelativeLayout1"
            android:layout_width="0px"
            android:layout_weight="4"
            android:layout_height="@dimen/listview_item_height"
            android:layout_marginLeft="15px"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#22000000"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/editImageView1"
                android:layout_width="57px"
                android:layout_height="57px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="30px"
                android:src="@drawable/ic_pen_wh"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/starImageView1"
                android:layout_width="57px"
                android:layout_height="57px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="30px"
                android:layout_marginRight="30px"
                android:src="@drawable/ic_star_wh"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imagesRelativeLayout2"
            android:layout_width="0px"
            android:layout_weight="4"
            android:layout_height="@dimen/listview_item_height"
            android:layout_marginLeft="15px"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#22000000"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/editImageView2"
                android:layout_width="57px"
                android:layout_height="57px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="30px"
                android:src="@drawable/ic_pen_wh"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/starImageView2"
                android:layout_width="57px"
                android:layout_height="57px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="30px"
                android:layout_marginRight="30px"
                android:src="@drawable/ic_star_wh"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>